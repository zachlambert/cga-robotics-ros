<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="delta">

<joint name="chain_1_end_to_ee" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="chain_1_end"/>
    <child link="ee"/>
</joint>

<joint name="theta_4" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 ${-pi/3}"/>
    <parent link="ee"/>
    <child link="gripper_base"/>
    <axis xyz="0 0 1"/>
    <limit
        effort="1000.0"
        lower="${-pi/2}"
        upper="${pi/2}"
        velocity="5"
    />
</joint>

<joint name="gripper" type="revolute">
    <origin xyz="0 -0.05 -0.08" rpy="0 0 0"/>
    <parent link="gripper_base"/>
    <child link="gripper_left"/>
    <axis xyz="1 0 0"/>
    <limit
        effort="1000.0"
        lower="0"
        upper="${pi/2}"
        velocity="5"
    />
</joint>

<joint name="gripper_mimic" type="revolute">
    <origin xyz="0 0.05 -0.08" rpy="0 0 0"/>
    <parent link="gripper_base"/>
    <child link="gripper_right"/>
    <axis xyz="-1 0 0"/>
    <limit
        effort="1000.0"
        lower="0"
        upper="${pi/2}"
        velocity="5"
    />
    <mimic joint="gripper"/>
</joint>

<transmission name="theta_4_tran">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="theta_4">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="theta_4">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
    </actuator>
</transmission>
<transmission name="gripper_tran">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="gripper">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="gripper">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
    </actuator>
</transmission>

</robot>
